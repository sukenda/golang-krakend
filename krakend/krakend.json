{
  "version": 3,
  "plugin": {
    "pattern":".so",
    "folder": "/opt/krakend/plugins/"
  },
  "port": 8080,
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "name": "go-microservices",
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "syslog": true,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/v1/auth/register",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/auth/register",
          "method": "POST",
          "host": [
            "http://auth-service:8081"
          ],
          "extra_config": {}
        }
      ]
    },
    {
      "endpoint": "/v1/auth/login",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/auth/login",
          "method": "POST",
          "host": [
            "http://auth-service:8081"
          ]
        }
      ],
      "extra_config": {
        "auth/signer": {
          "alg": "HS256",
          "kid": "bluebird.id",
          "keys_to_sign": ["access_token", "refresh_token"],
          "jwk_url": "http://auth-service:8081/auth/jwk",
          "disable_jwk_security": true
        }
      }
    },
    {
      "endpoint": "/v1/auth/validate",
      "method": "POST",
      "backend": [
        {
          "url_pattern": "/auth/validate",
          "method": "POST",
          "host": [
            "http://auth-service:8081"
          ],
          "extra_config": {}
        }
      ]
    },
    {
      "endpoint": "/v1/product/create",
      "method": "POST",
      "output_encoding": "json",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5,
          "client_max_rate": 1,
          "strategy": "header",
          "key": "Authorization"
        },
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://auth-service:8081/auth/jwk",
          "disable_jwk_security": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "url_pattern": "/product/create",
          "method": "POST",
          "host": [
            "http://product-service:8083"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/product/find-one",
      "method": "GET",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5,
          "client_max_rate": 1,
          "strategy": "header",
          "key": "Authorization"
        },
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://auth-service:8081/auth/jwk",
          "disable_jwk_security": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "url_pattern": "/product/find-one",
          "method": "GET",
          "host": [
            "http://product-service:8083"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/product/decrease-stock",
      "method": "POST",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5,
          "client_max_rate": 1,
          "strategy": "header",
          "key": "Authorization"
        },
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://auth-service:8081/auth/jwk",
          "disable_jwk_security": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "url_pattern": "/product/decrease-stock",
          "method": "POST",
          "host": [
            "http://product-service:8083"
          ]
        }
      ]
    },
    {
      "endpoint": "/v1/order/create",
      "method": "POST",
      "extra_config": {
        "qos/ratelimit/router": {
          "max_rate": 5,
          "client_max_rate": 1,
          "strategy": "header",
          "key": "Authorization"
        },
        "auth/validator": {
          "alg": "HS256",
          "jwk_url": "http://auth-service:8081/auth/jwk",
          "disable_jwk_security": true,
          "key_identify_strategy": "kid"
        }
      },
      "backend": [
        {
          "url_pattern": "/order/create",
          "method": "POST",
          "host": [
            "http://order-service:8082"
          ]
        }
      ]
    }
  ]
}